\def\unlist#1#2{%
  \rightmargin\z@
  \listparindent\z@
  \itemindent\z@
  \def\@itemlabel{#1}%
  \let\makelabel\@mklab
  \@nmbrlistfalse
  #2\relax
  \@trivlist
  \parskip\parsep
  \parindent\listparindent
  \advance\linewidth -\rightmargin
  \advance\linewidth -\leftmargin
  \advance\@totalleftmargin \leftmargin
  \parshape \@ne \@totalleftmargin \linewidth
  \ignorespaces}
\def\endunlist{%
  \endtrivlist}

\newcommand\labelunitem{\textbullet}
\def\unitemize{%
  \edef\@unitemitem{labelunitem}%
  \expandafter
  \unlist
    \csname\@unitemitem\endcsname
    {\def\makelabel##1{\hss\llap{##1}}}}
\let\endunitemize =\endunlist
